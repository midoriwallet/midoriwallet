{
  "manifest_version": 3,
  "name": "Midori Wallet",
  "version": "1.0.3",
  "description": "Midori Wallet - Accede a tu wallet en wallet.astian.org desde tu navegador. Gestiona Bitcoin, Ethereum y m√°s.",
  "author": "Midori Wallet <contact@astian.org>",
  "homepage_url": "https://wallet.astian.org/",
  
  "icons": {
    "16": "icons/icon-48.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png"
  },

  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "cookies",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],

  "host_permissions": [
    "https://wallet.astian.org/*",
    "https://*.astian.org/*",
    "<all_urls>"
  ],

  "action": {
    "default_icon": {
      "16": "icons/icon-48.png",
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "Midori Wallet",
    "default_popup": "popup/popup.html"
  },

  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["popup/popup.html", "popup/wallet.html", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },

  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "cors_rules",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
